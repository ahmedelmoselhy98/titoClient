<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:layoutDirection="ltr">

    <!--<view-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="#40000000"/>-->



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:layoutDirection="ltr"
        android:orientation="vertical">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top|center"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_marginTop="?actionBarSize"
                   android:src="@drawable/smartphone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Confirm phone number"
                    android:textColor="@color/wight_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"
                    android:text="Please enter your phone number to receive confirmation code"
                    android:textColor="@color/wight_dark"
                    android:textSize="14sp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="41dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="40dp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/signup_mail_back"
                        android:drawablePadding="10dp"
                        android:hint="+20"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:focusable="false"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/gray_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/phoneET"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/signup_mail_back"
                        android:drawablePadding="10dp"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:maxLength="10"
                        android:paddingRight="10dp"
                        android:textColor="@color/gray_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/phoneBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/signup_button_back"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"
                    android:text="@string/continuee"
                    android:textAllCaps="true"
                    android:textColor="#FFF"
                    android:textSize="14sp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
</FrameLayout>